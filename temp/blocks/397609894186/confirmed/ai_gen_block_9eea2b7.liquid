{% doc %}
  @prompt
    Create modern, readable CSS styling for product card size selectors with improved visual design, better spacing, clear hover states, and enhanced readability
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-size-selector-{{ ai_gen_id }} {
    display: block;
    width: 100%;
  }

  .ai-size-selector__container-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    gap: {{ block.settings.spacing_between_elements }}px;
  }

  .ai-size-selector__label-{{ ai_gen_id }} {
    font-size: {{ block.settings.label_font_size }}px;
    font-weight: {{ block.settings.label_font_weight }};
    color: {{ block.settings.label_color }};
    margin: 0;
    letter-spacing: 0.5px;
  }

  .ai-size-selector__options-{{ ai_gen_id }} {
    display: flex;
    flex-wrap: wrap;
    gap: {{ block.settings.option_spacing }}px;
  }

  .ai-size-selector__option-{{ ai_gen_id }} {
    position: relative;
  }

  .ai-size-selector__input-{{ ai_gen_id }} {
    position: absolute;
    opacity: 0;
    width: 0;
    height: 0;
  }

  .ai-size-selector__button-{{ ai_gen_id }} {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    min-width: {{ block.settings.option_min_width }}px;
    height: {{ block.settings.option_height }}px;
    padding: 0 {{ block.settings.option_padding_horizontal }}px;
    background-color: {{ block.settings.option_background }};
    color: {{ block.settings.option_text_color }};
    border: {{ block.settings.option_border_width }}px solid {{ block.settings.option_border_color }};
    border-radius: {{ block.settings.option_border_radius }}px;
    font-size: {{ block.settings.option_font_size }}px;
    font-weight: {{ block.settings.option_font_weight }};
    cursor: pointer;
    transition: all 0.2s ease;
    text-align: center;
    line-height: 1.2;
    letter-spacing: 0.3px;
  }

  .ai-size-selector__button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.option_hover_background }};
    color: {{ block.settings.option_hover_text_color }};
    border-color: {{ block.settings.option_hover_border_color }};
    transform: translateY(-{{ block.settings.hover_lift }}px);
    box-shadow: 0 {{ block.settings.hover_lift | times: 2 }}px {{ block.settings.hover_lift | times: 4 }}px rgba(0, 0, 0, {{ block.settings.hover_shadow_opacity }});
  }

  .ai-size-selector__input-{{ ai_gen_id }}:checked + .ai-size-selector__button-{{ ai_gen_id }} {
    background-color: {{ block.settings.option_selected_background }};
    color: {{ block.settings.option_selected_text_color }};
    border-color: {{ block.settings.option_selected_border_color }};
    border-width: {{ block.settings.option_selected_border_width }}px;
    font-weight: {{ block.settings.option_selected_font_weight }};
  }

  .ai-size-selector__input-{{ ai_gen_id }}:disabled + .ai-size-selector__button-{{ ai_gen_id }} {
    background-color: {{ block.settings.option_disabled_background }};
    color: {{ block.settings.option_disabled_text_color }};
    border-color: {{ block.settings.option_disabled_border_color }};
    cursor: not-allowed;
    opacity: {{ block.settings.disabled_opacity }};
    position: relative;
  }

  {% if block.settings.show_strikethrough_on_disabled %}
    .ai-size-selector__input-{{ ai_gen_id }}:disabled + .ai-size-selector__button-{{ ai_gen_id }}::after {
      content: '';
      position: absolute;
      top: 50%;
      left: 10%;
      right: 10%;
      height: 1px;
      background-color: {{ block.settings.option_disabled_text_color }};
      transform: translateY(-50%) rotate(-15deg);
    }
  {% endif %}

  .ai-size-selector__input-{{ ai_gen_id }}:disabled + .ai-size-selector__button-{{ ai_gen_id }}:hover {
    transform: none;
    box-shadow: none;
  }

  .ai-size-selector__input-{{ ai_gen_id }}:focus-visible + .ai-size-selector__button-{{ ai_gen_id }} {
    outline: 2px solid {{ block.settings.focus_outline_color }};
    outline-offset: 2px;
  }

  @media screen and (max-width: 749px) {
    .ai-size-selector__label-{{ ai_gen_id }} {
      font-size: {{ block.settings.label_font_size | times: 0.9 }}px;
    }

    .ai-size-selector__button-{{ ai_gen_id }} {
      min-width: {{ block.settings.option_min_width | times: 0.9 }}px;
      height: {{ block.settings.option_height | times: 0.9 }}px;
      font-size: {{ block.settings.option_font_size | times: 0.9 }}px;
      padding: 0 {{ block.settings.option_padding_horizontal | times: 0.9 }}px;
    }
  }
{% endstyle %}

<size-selector-{{ ai_gen_id }} class="ai-size-selector-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-size-selector__container-{{ ai_gen_id }}">
    {% if block.settings.show_label %}
      <label class="ai-size-selector__label-{{ ai_gen_id }}">
        {{ block.settings.label_text }}
      </label>
    {% endif %}

    <div class="ai-size-selector__options-{{ ai_gen_id }}" role="radiogroup" aria-label="{{ block.settings.label_text }}">
      {% for i in (1..8) %}
        {% liquid
          assign size_key = 'size_' | append: i
          assign size_value = block.settings[size_key]
          assign enabled_key = 'size_' | append: i | append: '_enabled'
          assign size_enabled = block.settings[enabled_key]
          assign available_key = 'size_' | append: i | append: '_available'
          assign size_available = block.settings[available_key]
        %}

        {% if size_enabled and size_value != blank %}
          <div class="ai-size-selector__option-{{ ai_gen_id }}">
            <input
              type="radio"
              id="ai-size-{{ ai_gen_id }}-{{ i }}"
              name="ai-size-selector-{{ ai_gen_id }}"
              value="{{ size_value }}"
              class="ai-size-selector__input-{{ ai_gen_id }}"
              {% if i == 1 %}checked{% endif %}
              {% unless size_available %}disabled{% endunless %}
            >
            <label
              for="ai-size-{{ ai_gen_id }}-{{ i }}"
              class="ai-size-selector__button-{{ ai_gen_id }}"
            >
              {{ size_value }}
            </label>
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</size-selector-{{ ai_gen_id }}>

<script>
  (function() {
    class SizeSelector{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
        this.inputs = this.querySelectorAll('.ai-size-selector__input-{{ ai_gen_id }}');
        this.setupEventListeners();
      }

      setupEventListeners() {
        this.inputs.forEach((input) => {
          input.addEventListener('change', (event) => {
            this.handleSizeChange(event.target.value);
          });
        });
      }

      handleSizeChange(selectedSize) {
        this.dispatchEvent(new CustomEvent('size-changed', {
          detail: { size: selectedSize },
          bubbles: true
        }));
      }
    }

    customElements.define('size-selector-{{ ai_gen_id }}', SizeSelector{{ ai_gen_id }});
  })();
</script>

