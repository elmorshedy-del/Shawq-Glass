{%- comment -%}
Shawq Design System Variables
This snippet defines CSS variables from Theme settings so nothing is hardcoded.
{%- endcomment -%}
<style>
  :root {
    --shawq-surface-opacity-desktop: {{ settings.shawq_surface_opacity_desktop | default: 0.88 }};
    --shawq-surface-opacity-mobile: {{ settings.shawq_surface_opacity_mobile | default: 0.92 }};
    --shawq-blur-desktop: {{ settings.shawq_blur_desktop | default: 10 }}px;
    --shawq-blur-mobile: {{ settings.shawq_blur_mobile | default: 8 }}px;
    --shawq-sheen: {{ settings.shawq_sheen_strength | default: 0.35 }};
    --shawq-border-opacity: {{ settings.shawq_border_opacity | default: 0.25 }};
    --shawq-shadow-strength: {{ settings.shawq_shadow_strength | default: 0.25 }};
    --shawq-radius: {{ settings.shawq_radius | default: 16 }}px;

    --shawq-btn-outline: {{ settings.shawq_btn_outline | default: 1.25 }}px;
    --shawq-btn-lift: {{ settings.shawq_btn_lift | default: 2 }}px;

    --shawq-section-pad-desktop: {{ settings.shawq_section_pad_desktop | default: 56 }}px;
    --shawq-section-pad-mobile: {{ settings.shawq_section_pad_mobile | default: 32 }}px;
    --shawq-gutter-desktop: {{ settings.shawq_gutter_desktop | default: 24 }}px;
    --shawq-gutter-mobile: {{ settings.shawq_gutter_mobile | default: 16 }}px;
  }

  {%- if settings.shawq_mobile_font_override -%}
  @media (max-width: 989px) {
    :root {
      --shawq-heading-font-family: {{ settings.shawq_heading_font_mobile.family | json }};
      --shawq-heading-font-style: {{ settings.shawq_heading_font_mobile.style | json }};
      --shawq-heading-font-weight: {{ settings.shawq_heading_font_mobile.weight | json }};

      --shawq-body-font-family: {{ settings.shawq_body_font_mobile.family | json }};
      --shawq-body-font-style: {{ settings.shawq_body_font_mobile.style | json }};
      --shawq-body-font-weight: {{ settings.shawq_body_font_mobile.weight | json }};
    }
  }
  {%- endif -%}
</style>
